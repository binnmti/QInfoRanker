{
  "AzureOpenAI": {
    "Endpoint": "YOUR_AZURE_OPENAI_ENDPOINT",
    "ApiKey": "YOUR_API_KEY",
    "DeploymentName": "gpt-4o-mini",
    "MaxTokens": 500,
    "Temperature": 0.3
  },
  "Scoring": {
    "NativeScoreWeight": 0.7,
    "LlmScoreWeight": 0.3,
    "LlmOnlyWeight": 1.0,
    "AuthorityBonusMultiplier": 10.0,
    "DefaultMaxNativeScore": 100
  },
  "BatchScoring": {
    "RelevanceBatchSize": 15,
    "RelevanceThreshold": 3.0,
    "RelevanceMaxTokens": 2000,
    "QualityBatchSize": 5,
    "QualityMaxTokens": 3000,
    "EnableBatchProcessing": true,
    "FallbackToIndividual": true,
    "MaxRetries": 2,
    "DelayBetweenBatchesMs": 500
  }
}
