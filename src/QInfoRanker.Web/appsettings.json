{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "UseSqlite": true,
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=QInfoRanker.db"
  },
  "AzureOpenAI": {
    "Endpoint": "YOUR_AZURE_OPENAI_ENDPOINT",
    "ApiKey": "YOUR_API_KEY",
    "DeploymentName": "gpt-4o-mini",
    "MaxTokens": 500,
    "Temperature": 0.3
  },
  "Scoring": {
    "Preset": "QualityFocused",
    "LlmOnlyWeight": 1.0,
    "AuthorityBonusMultiplier": 10.0,
    "DefaultMaxNativeScore": 100
  },
  "BatchScoring": {
    "FilteringPreset": "Normal",
    "RelevanceBatchSize": 15,
    "RelevanceMaxTokens": 2000,
    "QualityBatchSize": 3,
    "QualityMaxTokens": 3000,
    "EnableBatchProcessing": true,
    "FallbackToIndividual": true,
    "MaxRetries": 2,
    "DelayBetweenBatchesMs": 500
  },
  "EnsembleScoring": {
    "EnableEnsemble": false,
    "MaxParallelJudges": 3,
    "JudgeTimeoutMs": 60000,
    "ConsensusThreshold": 5.0,
    "SkipMetaJudgeOnConsensus": true,
    "Judges": [
      {
        "JudgeId": "JudgeA",
        "DisplayName": "gpt-5 (汎用評価)",
        "DeploymentName": "gpt-5",
        "Weight": 1.0,
        "IsEnabled": true
      },
      {
        "JudgeId": "JudgeB",
        "DisplayName": "gpt-5-codex (技術評価)",
        "DeploymentName": "gpt-5",
        "Weight": 1.2,
        "Specialty": "technical",
        "IsEnabled": true
      },
      {
        "JudgeId": "JudgeC",
        "DisplayName": "o3 (推論評価)",
        "DeploymentName": "gpt-5",
        "Weight": 1.0,
        "Specialty": "reasoning",
        "IsEnabled": true
      }
    ],
    "MetaJudge": {
      "IsEnabled": true,
      "DeploymentName": "gpt-5",
      "ContradictionThreshold": 15.0
    }
  }
}
