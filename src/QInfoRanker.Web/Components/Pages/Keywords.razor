@page "/"
@page "/keywords"
@rendermode InteractiveServer
@inject IKeywordService KeywordService
@inject ICollectionQueue CollectionQueue
@inject NavigationManager Navigation

<PageTitle>キーワード - QInfoRanker</PageTitle>

<h1>キーワード</h1>

<div class="mb-3">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="新しいキーワードを入力..." @bind="newKeywordTerm" @bind:event="oninput" disabled="@isAdding" />
        <button class="btn btn-primary" @onclick="AddKeyword" disabled="@(string.IsNullOrWhiteSpace(newKeywordTerm) || isAdding)">
            @if (isAdding)
            {
                <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                <span>AI analyzing...</span>
            }
            else
            {
                <span>追加</span>
            }
        </button>
    </div>
    <small class="text-muted">AIがキーワードに最適なソースを自動選定します</small>
</div>

@if (!string.IsNullOrEmpty(statusMessage))
{
    <div class="alert @(isError ? "alert-danger" : "alert-info") alert-dismissible fade show" role="alert">
        @statusMessage
        <button type="button" class="btn-close" @onclick="() => statusMessage = string.Empty"></button>
    </div>
}

@if (isLoading)
{
    <p>読み込み中...</p>
}
else if (keywords == null || !keywords.Any())
{
    <p>キーワードがありません。上のフォームから追加してください。</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>キーワード</th>
                <th>別名 (英語)</th>
                <th>状態</th>
                <th>ソース</th>
                <th>作成日</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var keyword in keywords)
            {
                var status = CollectionQueue.GetStatus(keyword.Id);
                <tr>
                    <td>@keyword.Term</td>
                    <td>
                        @if (editingKeywordId == keyword.Id)
                        {
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control" @bind="editingAliases" placeholder="例: quantum computer, quantum computing" />
                                <button class="btn btn-success btn-sm" @onclick="() => SaveAliases(keyword.Id)">保存</button>
                                <button class="btn btn-secondary btn-sm" @onclick="CancelEdit">取消</button>
                            </div>
                        }
                        else
                        {
                            <span class="text-muted">@(string.IsNullOrEmpty(keyword.Aliases) ? "(なし)" : keyword.Aliases)</span>
                            <button class="btn btn-link btn-sm p-0 ms-2" @onclick="() => StartEditAliases(keyword.Id, keyword.Aliases)">編集</button>
                        }
                    </td>
                    <td>
                        @if (keyword.IsActive)
                        {
                            <span class="badge bg-success">有効</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">無効</span>
                        }
                    </td>
                    <td>
                        @if (keyword.Sources.Any())
                        {
                            <span class="badge bg-info me-1">@keyword.Sources.Count sources</span>
                            <small class="text-muted">
                                @string.Join(", ", keyword.Sources.Select(s => s.Name))
                            </small>
                        }
                        else
                        {
                            <span class="text-muted">No sources</span>
                        }
                    </td>
                    <td>@keyword.CreatedAt.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (status != null && status.State != CollectionState.Completed && status.State != CollectionState.Failed)
                        {
                            <button class="btn btn-sm btn-warning" disabled>
                                <span class="spinner-border spinner-border-sm" role="status"></span>
                                @GetStatusText(status.State)
                            </button>
                        }
                        else
                        {
                            <button class="btn btn-sm btn-success" @onclick="() => CollectForKeyword(keyword.Id, keyword.Term)">
                                収集
                            </button>
                        }
                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => ToggleActive(keyword.Id)">
                            @(keyword.IsActive ? "無効化" : "有効化")
                        </button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteKeyword(keyword.Id)">
                            削除
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <button class="btn btn-primary" @onclick="CollectAll">
            全キーワードを収集
        </button>
        <a href="/ranking" class="btn btn-outline-primary ms-2">
            ランキングを見る
        </a>
    </div>
}

@code {
    private IEnumerable<Keyword>? keywords;
    private string newKeywordTerm = string.Empty;
    private bool isLoading = true;
    private string statusMessage = string.Empty;
    private bool isError = false;
    private int? editingKeywordId;
    private string editingAliases = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadKeywords();
    }

    private async Task LoadKeywords()
    {
        isLoading = true;
        keywords = await KeywordService.GetAllAsync();
        isLoading = false;
    }

    private bool isAdding = false;

    private async Task AddKeyword()
    {
        if (!string.IsNullOrWhiteSpace(newKeywordTerm) && !isAdding)
        {
            isAdding = true;
            statusMessage = $"AIがソースを選定中... ({newKeywordTerm})";
            isError = false;
            StateHasChanged();

            try
            {
                var term = newKeywordTerm.Trim();
                var keyword = await KeywordService.CreateAsync(term);
                newKeywordTerm = string.Empty;
                await LoadKeywords();

                // Get the created keyword with sources
                var createdKeyword = keywords?.FirstOrDefault(k => k.Id == keyword.Id);
                if (createdKeyword != null && createdKeyword.Sources.Any())
                {
                    var sourceNames = string.Join(", ", createdKeyword.Sources.Select(s => s.Name));
                    statusMessage = $"「{term}」を追加しました。AIが推薦したソース: {sourceNames}";
                }
                else
                {
                    statusMessage = $"「{term}」を追加しました。";
                }
                isError = false;
            }
            catch (Exception ex)
            {
                statusMessage = $"エラー: {ex.Message}";
                isError = true;
            }
            finally
            {
                isAdding = false;
            }
        }
    }

    private async Task ToggleActive(int id)
    {
        await KeywordService.ToggleActiveAsync(id);
        await LoadKeywords();
    }

    private async Task DeleteKeyword(int id)
    {
        await KeywordService.DeleteAsync(id);
        await LoadKeywords();
    }

    private void StartEditAliases(int keywordId, string? aliases)
    {
        editingKeywordId = keywordId;
        editingAliases = aliases ?? string.Empty;
    }

    private void CancelEdit()
    {
        editingKeywordId = null;
        editingAliases = string.Empty;
    }

    private async Task SaveAliases(int keywordId)
    {
        await KeywordService.UpdateAliasesAsync(keywordId, editingAliases);
        editingKeywordId = null;
        editingAliases = string.Empty;
        await LoadKeywords();
    }

    private async Task CollectForKeyword(int keywordId, string term)
    {
        var job = new CollectionJob
        {
            KeywordId = keywordId,
            KeywordTerm = term
        };

        await CollectionQueue.EnqueueAsync(job);
        statusMessage = $"「{term}」の収集をバックグラウンドで開始しました。ランキングページで結果を確認できます。";
        isError = false;
        StateHasChanged();

        // ランキングページへ遷移
        Navigation.NavigateTo($"/ranking?keyword={keywordId}");
    }

    private async Task CollectAll()
    {
        if (keywords == null) return;

        foreach (var keyword in keywords.Where(k => k.IsActive))
        {
            var job = new CollectionJob
            {
                KeywordId = keyword.Id,
                KeywordTerm = keyword.Term
            };
            await CollectionQueue.EnqueueAsync(job);
        }

        statusMessage = "全キーワードの収集をバックグラウンドで開始しました。";
        isError = false;
        StateHasChanged();

        Navigation.NavigateTo("/ranking");
    }

    private string GetStatusText(CollectionState state) => state switch
    {
        CollectionState.Queued => "待機中...",
        CollectionState.Collecting => "収集中...",
        CollectionState.Scoring => "スコアリング中...",
        _ => "処理中..."
    };
}
