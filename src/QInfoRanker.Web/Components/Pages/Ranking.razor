@page "/ranking"
@rendermode InteractiveServer
@using QInfoRanker.Core.Entities
@using QInfoRanker.Core.Enums
@inject IArticleService ArticleService
@inject IKeywordService KeywordService
@inject ISourceService SourceService
@inject ICollectionQueue CollectionQueue
@inject NavigationManager Navigation
@implements IDisposable

<PageTitle>Ranking - QInfoRanker</PageTitle>

<style>
    .article-item {
        animation: slideIn 0.3s ease-out;
    }
    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    .score-bar {
        height: 6px;
        border-radius: 3px;
        background-color: #e9ecef;
        overflow: hidden;
    }
    .score-bar-fill {
        height: 100%;
        border-radius: 3px;
        transition: width 0.3s ease;
    }
    .score-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 4px;
        font-size: 0.75rem;
    }
    .time-info {
        font-size: 0.7rem;
        color: #6c757d;
    }
</style>

<h1>Ranking</h1>

@* Collection status display - detailed progress *@
@if (collectionStatuses.Any())
{
    <div class="mb-3">
        @foreach (var status in collectionStatuses)
        {
            var progressPercent = status.TotalSources > 0
                ? (int)(status.SourceIndex * 100.0 / status.TotalSources)
                : 0;
            var isFailed = status.State == CollectionState.Failed;
            var alertClass = isFailed ? "alert-danger" : (status.HasFatalError ? "alert-danger" : "alert-info");

            <div class="alert @alertClass mb-2">
                @* Header row *@
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="d-flex align-items-center">
                        @if (!isFailed && !status.HasFatalError)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        <strong>@status.KeywordTerm</strong>
                        @if (!string.IsNullOrEmpty(status.CurrentSource))
                        {
                            <span class="badge bg-secondary ms-2">@status.CurrentSource</span>
                        }
                    </div>
                    <small class="text-muted">
                        @if (status.TotalSources > 0)
                        {
                            <span>„ÇΩ„Éº„Çπ @status.SourceIndex / @status.TotalSources</span>
                        }
                    </small>
                </div>

                @* Progress bar *@
                @if (status.TotalSources > 0 && !isFailed)
                {
                    <div class="progress mb-2" style="height: 20px;">
                        <div class="progress-bar @(status.State == CollectionState.Scoring ? "bg-success" : "bg-primary")"
                             role="progressbar"
                             style="width: @progressPercent%;"
                             aria-valuenow="@progressPercent"
                             aria-valuemin="0"
                             aria-valuemax="100">
                            @(status.Message ?? GetStatusText(status.State))
                        </div>
                    </div>
                }

                @* Stats row *@
                <div class="d-flex flex-wrap gap-3 small">
                    <span>
                        <i class="bi bi-collection"></i>
                        ÂèéÈõÜ: <strong>@status.ArticlesCollected</strong>‰ª∂
                    </span>
                    <span>
                        <i class="bi bi-check-circle"></i>
                        „Çπ„Ç≥„Ç¢Ê∏à: <strong>@status.ArticlesScored</strong>‰ª∂
                    </span>
                    <small class="text-muted ms-auto">
                        @if (status.StartedAt != default)
                        {
                            var elapsed = DateTime.UtcNow - status.StartedAt;
                            <span>ÁµåÈÅé: @elapsed.ToString(@"mm\:ss")</span>
                        }
                    </small>
                </div>

                @* Error display *@
                @if (status.HasFatalError)
                {
                    <div class="alert alert-danger mt-2 mb-0 py-2">
                        <strong>Ëá¥ÂëΩÁöÑ„Ç®„É©„Éº:</strong> @status.FatalErrorMessage
                    </div>
                }
                else if (status.SourceErrors.Any())
                {
                    <div class="mt-2">
                        @foreach (var err in status.SourceErrors.TakeLast(3))
                        {
                            <span class="badge bg-warning text-dark me-1" title="@err.ErrorMessage">
                                @err.SourceName: „Ç®„É©„Éº
                            </span>
                        }
                        @if (status.SourceErrors.Count > 3)
                        {
                            <span class="text-muted small">‰ªñ @(status.SourceErrors.Count - 3)‰ª∂</span>
                        }
                    </div>
                }

                @* Source results (completed sources) *@
                @if (status.SourceResults.Any())
                {
                    <div class="mt-2 d-flex flex-wrap gap-1">
                        @foreach (var result in status.SourceResults)
                        {
                            var badgeClass = result.Success ? "bg-success" : "bg-danger";
                            <span class="badge @badgeClass" style="font-size: 0.7rem;"
                                  title="@(result.Success ? $"{result.ArticleCount}‰ª∂ÂèéÈõÜ, {result.ScoredCount}‰ª∂„Çπ„Ç≥„Ç¢" : result.ErrorMessage)">
                                @result.SourceName (@result.ArticleCount)
                            </span>
                        }
                    </div>
                }
            </div>
        }
        <small class="text-muted">Ëá™ÂãïÊõ¥Êñ∞: @(autoRefreshSeconds)Áßí„Åî„Å®</small>
    </div>
}

<div class="row mb-3 g-2">
    <div class="col-md-2">
        <label class="form-label">Keyword</label>
        <select class="form-select form-select-sm" @bind="selectedKeywordId" @bind:after="LoadRanking">
            <option value="">All</option>
            @if (keywords != null)
            {
                @foreach (var kw in keywords)
                {
                    <option value="@kw.Id">@kw.Term</option>
                }
            }
        </select>
    </div>
    <div class="col-md-2">
        <label class="form-label">Language</label>
        <select class="form-select form-select-sm" @bind="selectedLanguage" @bind:after="LoadRanking">
            <option value="">All</option>
            <option value="Japanese">Japanese</option>
            <option value="English">English</option>
        </select>
    </div>
    <div class="col-md-2">
        <label class="form-label">Source</label>
        <select class="form-select form-select-sm" @bind="selectedSourceId" @bind:after="LoadRanking">
            <option value="">All</option>
            @if (sources != null)
            {
                @foreach (var src in sources)
                {
                    <option value="@src.Id">@src.Name</option>
                }
            }
        </select>
    </div>
    <div class="col-md-2">
        <label class="form-label">Period</label>
        <select class="form-select form-select-sm" @bind="selectedPeriod" @bind:after="LoadRanking">
            <option value="day">Today</option>
            <option value="week">This Week</option>
            <option value="month">This Month</option>
            <option value="all">All Time</option>
        </select>
    </div>
    <div class="col-md-2">
        <label class="form-label">Count</label>
        <select class="form-select form-select-sm" @bind="topCount" @bind:after="LoadRanking">
            <option value="10">10</option>
            <option value="25">25</option>
            <option value="50">50</option>
            <option value="100">100</option>
        </select>
    </div>
    <div class="col-md-2 d-flex align-items-end">
        <button class="btn btn-outline-secondary btn-sm" @onclick="LoadRanking" disabled="@isLoading">
            @if (isLoading)
            {
                <span class="spinner-border spinner-border-sm" role="status"></span>
            }
            else
            {
                <span>Refresh</span>
            }
        </button>
    </div>
</div>

@if (isLoading && articles == null)
{
    <p>Loading...</p>
}
else if (articles == null || !articles.Any())
{
    <div class="alert alert-info">
        No articles to rank. Click "Collect" on the <a href="/">Keywords</a> page to start collecting articles.
    </div>
}
else
{
    var avgScore = articles.Any() ? articles.Average(a => a.FinalScore) : 0;
    <div class="mb-2 text-muted small">
        @articles.Count() ‰ª∂ (Âπ≥Âùá: @avgScore.ToString("F1")ÁÇπ)
        @if(lastUpdated.HasValue) { <span class="ms-2">Êõ¥Êñ∞: @lastUpdated.Value.ToString("HH:mm:ss")</span> }
    </div>
    <div class="list-group">
        @{ var rank = 1; }
        @foreach (var article in articles)
        {
            <div class="list-group-item article-item" @key="article.Id">
                @* Title and link *@
                <div class="d-flex align-items-start">
                    <span class="badge bg-primary me-2">#@rank</span>
                    <a href="@article.Url" target="_blank" class="fw-bold text-decoration-none">@article.Title</a>
                </div>

                @* Meta info: Source, Date, Score - compact single line *@
                <div class="mt-1 d-flex flex-wrap gap-2 align-items-center text-muted small">
                    <span class="badge bg-secondary">@article.Source.Name</span>
                    <span class="badge @GetLanguageBadgeClass(article.Source.Language)">@GetLanguageLabel(article.Source.Language)</span>
                    @if (article.PublishedAt.HasValue)
                    {
                        <span>@article.PublishedAt.Value.ToString("yyyy-MM-dd")</span>
                    }
                    @if (article.NativeScore.HasValue)
                    {
                        <span title="Popularity (likes, bookmarks)">‚òÖ@article.NativeScore</span>
                    }
                    <span class="ms-auto d-flex align-items-center gap-1" title="ÊúÄÁµÇ„Çπ„Ç≥„Ç¢ = ÂìÅË≥™(@(article.LlmScore?.ToString("F0") ?? "-")) √ó Èñ¢ÈÄ£Â∫¶(@(article.RelevanceScore?.ToString("F0") ?? "-")/10)">
                        <span class="badge bg-info" style="font-size:0.65rem">ÊäÄË°ì:@(article.TechnicalScore ?? 0)</span>
                        <span class="badge bg-success" style="font-size:0.65rem">Êñ∞Ë¶è:@(article.NoveltyScore ?? 0)</span>
                        <span class="badge bg-warning text-dark" style="font-size:0.65rem">ÂΩ±Èüø:@(article.ImpactScore ?? 0)</span>
                        <span class="badge bg-secondary" style="font-size:0.65rem">ÂìÅË≥™:@(article.QualityScore ?? 0)</span>
                        <span class="badge bg-primary" style="font-size:0.65rem">Èñ¢ÈÄ£:@(article.RelevanceScore?.ToString("F0") ?? "-")</span>
                        <strong class="ms-1">@article.FinalScore.ToString("F1")</strong>ÁÇπ
                    </span>
                </div>

                @* Summary (prefer Japanese) - expanded content *@
                @{
                    var displaySummary = !string.IsNullOrEmpty(article.SummaryJa) ? article.SummaryJa : article.Summary;
                }
                @if (!string.IsNullOrEmpty(displaySummary))
                {
                    <p class="mt-2 mb-1 text-muted small" style="line-height: 1.5;">
                        @(displaySummary.Length > 600 ? displaySummary[..600] + "..." : displaySummary)
                    </p>
                }
                @* Additional metadata row *@
                <div class="mt-1 d-flex flex-wrap gap-2 align-items-center small text-muted" style="font-size: 0.7rem;">
                    @if (!string.IsNullOrEmpty(article.Keyword?.Term))
                    {
                        <span class="badge bg-dark">üîë @article.Keyword.Term</span>
                    }
                    @if (!string.IsNullOrEmpty(article.Keyword?.Aliases))
                    {
                        <span class="text-secondary">(@article.Keyword.Aliases)</span>
                    }
                    <span class="text-secondary">Collected: @article.CollectedAt.ToString("MM/dd HH:mm")</span>
                </div>
            </div>

            rank++;
        }
    </div>
}

@code {
    private IEnumerable<Article>? articles;
    private IEnumerable<Keyword>? keywords;
    private IEnumerable<Source>? sources;
    private int? selectedKeywordId;
    private int? selectedSourceId;
    private string selectedLanguage = "";
    private string selectedPeriod = "week";
    private int topCount = 50;
    private bool isLoading = true;
    private DateTime? lastUpdated;
    private List<CollectionStatus> collectionStatuses = new();
    private Timer? autoRefreshTimer;
    private const int autoRefreshSeconds = 5;
    private HashSet<int> previousArticleIds = new();

    [SupplyParameterFromQuery(Name = "keyword")]
    public int? KeywordIdFromQuery { get; set; }

    protected override async Task OnInitializedAsync()
    {
        keywords = await KeywordService.GetAllAsync();
        sources = await SourceService.GetAllAsync();

        if (KeywordIdFromQuery.HasValue)
        {
            selectedKeywordId = KeywordIdFromQuery;
        }

        await LoadRanking();
        UpdateCollectionStatuses();

        autoRefreshTimer = new Timer(async _ =>
        {
            await InvokeAsync(async () =>
            {
                UpdateCollectionStatuses();

                if (collectionStatuses.Any())
                {
                    await LoadRanking();
                }

                StateHasChanged();
            });
        }, null, TimeSpan.FromSeconds(autoRefreshSeconds), TimeSpan.FromSeconds(autoRefreshSeconds));
    }

    private void UpdateCollectionStatuses()
    {
        // ÈÄ≤Ë°å‰∏≠„ÅÆ„Çπ„ÉÜ„Éº„Çø„Çπ„ÇíË°®Á§∫ÔºàÂÆå‰∫ÜÊ∏à„Åø„ÅØÈô§Â§ñ„ÄÅÂ§±Êïó„ÅØ5ÂàÜÈñìË°®Á§∫Ôºâ
        collectionStatuses = CollectionQueue.GetAllStatuses()
            .Where(s => s.State == CollectionState.Queued ||
                        s.State == CollectionState.Collecting ||
                        s.State == CollectionState.Scoring ||
                        (s.State == CollectionState.Failed && s.CompletedAt > DateTime.UtcNow.AddMinutes(-5)))
            .OrderBy(s => s.State == CollectionState.Failed ? 1 : 0) // Â§±Êïó„ÇíÂæå„Çç„Å´
            .ThenBy(s => s.StartedAt)
            .ToList();
    }

    private async Task LoadRanking()
    {
        isLoading = true;
        StateHasChanged();

        DateTime? fromDate = selectedPeriod switch
        {
            "day" => DateTime.UtcNow.Date,
            "week" => DateTime.UtcNow.AddDays(-7),
            "month" => DateTime.UtcNow.AddMonths(-1),
            _ => null
        };

        var newArticles = await ArticleService.GetRankedAsync(selectedKeywordId, fromDate, null, topCount * 2);

        // Apply language filter
        if (!string.IsNullOrEmpty(selectedLanguage))
        {
            var targetLang = Enum.Parse<Language>(selectedLanguage);
            newArticles = newArticles.Where(a =>
                a.Source.Language == targetLang ||
                a.Source.Language == Language.Both);
        }

        // Apply source filter
        if (selectedSourceId.HasValue)
        {
            newArticles = newArticles.Where(a => a.SourceId == selectedSourceId.Value);
        }

        // Only show scored articles (filter out unscored)
        newArticles = newArticles.Where(a => a.LlmScore.HasValue);

        // Sort by FinalScore desc
        articles = newArticles
            .OrderByDescending(a => a.FinalScore)
            .ThenByDescending(a => a.CollectedAt)
            .Take(topCount);

        // Track new articles for animation
        var currentIds = articles.Select(a => a.Id).ToHashSet();
        previousArticleIds = currentIds;

        lastUpdated = DateTime.Now;
        isLoading = false;
    }

    private string GetStatusText(CollectionState state) => state switch
    {
        CollectionState.Queued => "Queued",
        CollectionState.Collecting => "Collecting",
        CollectionState.Scoring => "Scoring",
        _ => "Processing"
    };

    private string GetLanguageLabel(Language lang) => lang switch
    {
        Language.Japanese => "JP",
        Language.English => "EN",
        Language.Both => "Both",
        _ => "Other"
    };

    private string GetLanguageBadgeClass(Language lang) => lang switch
    {
        Language.Japanese => "bg-danger",
        Language.English => "bg-primary",
        Language.Both => "bg-success",
        _ => "bg-secondary"
    };

    public void Dispose()
    {
        autoRefreshTimer?.Dispose();
    }
}
