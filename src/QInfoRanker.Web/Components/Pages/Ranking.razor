@* Collection status display - detailed progress *@
@if (collectionStatuses.Any())
{
    <div class="mb-3">
        @foreach (var status in collectionStatuses)
        {
            // ÈÄ≤ÊçóË®àÁÆó: „ÇΩ„Éº„ÇπÂçò‰Ωç„ÅßÂùáÁ≠â„Å´ÈÄ≤Êçó„ÇíË®àÁÆó
            // ÂêÑ„ÇΩ„Éº„Çπ„ÅØ ÂèéÈõÜ‚Üí„Çπ„Ç≥„Ç¢„É™„É≥„Ç∞ „ÅÆÈ†Ü„ÅßÂá¶ÁêÜ„Åï„Çå„Çã
            // SourceIndex = ÁèæÂú®Âá¶ÁêÜ‰∏≠„ÅÆ„ÇΩ„Éº„ÇπÁï™Âè∑ (1-based)

            // ÂÆå‰∫Ü„Åó„Åü„ÇΩ„Éº„ÇπÊï∞ (ÁèæÂú®„ÇΩ„Éº„Çπ„ÅÆÂâç„Åæ„Åß)
            var completedSources = status.SourceIndex - 1;

            // ÁèæÂú®„ÇΩ„Éº„Çπ„ÅÆÈÄ≤ÊçóÊØîÁéá (0„Äú1)
            double currentSourceProgress = 0;
            if (status.State == CollectionState.Collecting)
            {
                currentSourceProgress = 0.3; // ÂèéÈõÜ‰∏≠„ÅØ30%
            }
            else if (status.State == CollectionState.Scoring)
            {
                currentSourceProgress = 0.7; // „Çπ„Ç≥„Ç¢„É™„É≥„Ç∞‰∏≠„ÅØ70%
            }
            else if (status.State == CollectionState.Completed || status.State == CollectionState.Failed)
            {
                currentSourceProgress = 1.0; // ÂÆå‰∫Ü/Â§±Êïó„ÅØ100%
            }

            // ÂÖ®‰ΩìÈÄ≤Êçó = (ÂÆå‰∫Ü„ÇΩ„Éº„ÇπÊï∞ + ÁèæÂú®„ÇΩ„Éº„Çπ„ÅÆÈÄ≤Êçó) / ÂÖ®„ÇΩ„Éº„ÇπÊï∞ √ó 100%
            var progressPercent = status.TotalSources > 0
                ? (int)((completedSources + currentSourceProgress) * 100.0 / status.TotalSources)
                : 0;

            // ÂÆå‰∫ÜÊôÇ„ÅØ100%„Å´Âõ∫ÂÆö
            if (status.State == CollectionState.Completed)
            {
                progressPercent = 100;
            }
            var isFailed = status.State == CollectionState.Failed;
            var alertClass = isFailed ? "alert-danger" : (status.HasFatalError ? "alert-danger" : "alert-info");

            <div class="alert @alertClass mb-2 collection-status-card">
                @* Header row *@
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <div class="d-flex align-items-center">
                        @if (!isFailed && !status.HasFatalError)
                        {
                            <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        }
                        <strong>@status.KeywordTerm</strong>
                        @if (!string.IsNullOrEmpty(status.CurrentSource))
                        {
                            <span class="badge bg-secondary ms-2">@status.CurrentSource</span>
                        }
                    </div>
                    <small class="text-muted">
                        @if (status.TotalSources > 0)
                        {
                            <span>„ÇΩ„Éº„Çπ @status.SourceIndex / @status.TotalSources</span>
                        }
                    </small>
                </div>

                @* Progress bar and status message (separated to avoid text cutoff) *@
                @if (status.TotalSources > 0 && !isFailed)
                {
                    <div class="mb-1 small">
                        <span class="badge @(status.State == CollectionState.Scoring ? "bg-success" : "bg-primary") me-2">
                            @(status.State == CollectionState.Scoring ? "„Çπ„Ç≥„Ç¢„É™„É≥„Ç∞" : "ÂèéÈõÜ‰∏≠")
                        </span>
                        @(status.Message ?? GetStatusText(status.State))
                    </div>
                    <div class="progress mb-2" style="height: 8px;">
                        <div class="progress-bar @(status.State == CollectionState.Scoring ? "bg-success" : "bg-primary")"
                             role="progressbar"
                             style="width: @progressPercent%;"
                             aria-valuenow="@progressPercent"
                             aria-valuemin="0"
                             aria-valuemax="100">
                        </div>
                    </div>
                }

                @* Stats row *@
                <div class="d-flex flex-wrap gap-3 small">
                    <span>
                        <i class="bi bi-collection"></i>
                        ÂèéÈõÜ: <strong>@status.ArticlesCollected</strong>‰ª∂
                    </span>
                    <span>
                        <i class="bi bi-check-circle"></i>
                        „Çπ„Ç≥„Ç¢Ê∏à: <strong>@status.ArticlesScored</strong>‰ª∂
                    </span>
                    @if (status.TotalInputTokens > 0 || status.TotalOutputTokens > 0)
                    {
                        <span class="text-info" title="ÂÖ•Âäõ: @status.TotalInputTokens.ToString("N0") / Âá∫Âäõ: @status.TotalOutputTokens.ToString("N0")">
                            <i class="bi bi-currency-dollar"></i>
                            $@status.EstimatedCostUsd.ToString("F4")
                        </span>
                    }
                    <small class="text-muted ms-auto">
                        @if (status.StartedAt != default)
                        {
                            var elapsed = DateTime.UtcNow - status.StartedAt;
                            <span>ÁµåÈÅé: @elapsed.ToString(@"mm\:ss")</span>
                        }
                    </small>
                </div>

                @* Error display *@
                @if (status.HasFatalError)
                {
                    <div class="alert alert-danger mt-2 mb-0 py-2">
                        <strong>Ëá¥ÂëΩÁöÑ„Ç®„É©„Éº:</strong> @status.FatalErrorMessage
                    </div>
                }
                else if (status.SourceErrors.Any())
                {
                    <div class="mt-2">
                        @foreach (var err in status.SourceErrors.TakeLast(3))
                        {
                            <span class="badge bg-warning text-dark me-1" title="@err.ErrorMessage">
                                @err.SourceName: „Ç®„É©„Éº
                            </span>
                        }
                        @if (status.SourceErrors.Count > 3)
                        {
                            <span class="text-muted small">‰ªñ @(status.SourceErrors.Count - 3)‰ª∂</span>
                        }
                    </div>
                }

                @* Source results (completed sources) *@
                @if (status.SourceResults.Any())
                {
                    <div class="mt-2 d-flex flex-wrap gap-1">
                        @foreach (var result in status.SourceResults)
                        {
                            var badgeClass = result.Success ? "bg-success" : "bg-danger";
                            <span class="badge @badgeClass" style="font-size: 0.7rem;"
                                  title="@(result.Success ? $"{result.ArticleCount}‰ª∂ÂèéÈõÜ, {result.ScoredCount}‰ª∂„Çπ„Ç≥„Ç¢" : result.ErrorMessage)">
                                @result.SourceName (@result.ArticleCount)
                            </span>
                        }
                    </div>
                }

                @* Âá¶ÁêÜ‰∏≠„ÅÆË®ò‰∫ãÔºàÊé°ÁÇπÂæÖ„Å° + ÂèñÂæó‰∏≠„ÇíÁµ±ÂêàË°®Á§∫„ÄÅÂÖ®‰ª∂„Çπ„ÇØ„É≠„Éº„É´ÂèØËÉΩÔºâ*@
                @{
                    var totalProcessing = status.PendingScoringPreviews.Count + status.FetchedPreviews.Count;
                }
                @if (totalProcessing > 0)
                {
                    <div class="mt-2">
                        <small class="text-muted d-block mb-1">
                            Âá¶ÁêÜ‰∏≠ (@(totalProcessing)‰ª∂)
                            @if (status.PendingScoringPreviews.Any())
                            {
                                <span class="badge bg-success ms-1" style="font-size: 0.6rem;">Êé°ÁÇπÂæÖ„Å° @(status.PendingScoringPreviews.Count)</span>
                            }
                            @if (status.FetchedPreviews.Any())
                            {
                                <span class="badge bg-secondary ms-1" style="font-size: 0.6rem;">ÂèñÂæó‰∏≠ @(status.FetchedPreviews.Count)</span>
                            }
                        </small>
                        <div class="list-group list-group-flush" style="max-height: 180px; overflow-y: auto;">
                            @* Êé°ÁÇπÂæÖ„Å°ÔºàÂÖ®‰ª∂Ë°®Á§∫Ôºâ*@
                            @foreach (var preview in status.PendingScoringPreviews.OrderByDescending(p => p.RelevanceScore))
                            {
                                <div class="list-group-item py-1 px-2 border-start border-success border-2" style="font-size: 0.7rem; background-color: #f8fff8;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a href="@preview.Url" target="_blank" class="text-truncate text-decoration-none" style="max-width: 70%;" title="@preview.Title">
                                            @(preview.Title.Length > 45 ? preview.Title[..45] + "..." : preview.Title)
                                        </a>
                                        <div class="d-flex gap-1">
                                            <span class="badge bg-success" style="font-size: 0.55rem;">Êé°ÁÇπÂæÖ</span>
                                            <span class="badge bg-light text-dark" style="font-size: 0.55rem;">@preview.SourceName</span>
                                        </div>
                                    </div>
                                </div>
                            }
                            @* ÂèñÂæó‰∏≠ÔºàÂÖ®‰ª∂Ë°®Á§∫Ôºâ*@
                            @foreach (var preview in status.FetchedPreviews.OrderByDescending(p => p.FetchedAt))
                            {
                                <div class="list-group-item py-1 px-2" style="font-size: 0.7rem;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <a href="@preview.Url" target="_blank" class="text-truncate text-decoration-none text-muted" style="max-width: 70%;" title="@preview.Title">
                                            @(preview.Title.Length > 45 ? preview.Title[..45] + "..." : preview.Title)
                                        </a>
                                        <div class="d-flex gap-1">
                                            <span class="badge bg-secondary" style="font-size: 0.55rem;">ÂèñÂæó‰∏≠</span>
                                            <span class="badge bg-light text-dark" style="font-size: 0.55rem;">@preview.SourceName</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        <small class="text-muted">Ëá™ÂãïÊõ¥Êñ∞: @(autoRefreshSeconds)Áßí„Åî„Å®</small>
    </div>
}

